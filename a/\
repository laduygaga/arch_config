from flask import Flask, json, redirect, render_template, request
import requests

app = Flask(__name__)
api_key = "50afdb8906f5b437142bdbf3decc04fce7556b5c"
base_url = 'https://api.meraki.com/api/v1'

@app.route('/get_orgs')
def get_user_orgs(api_key=api_key):
    get_url = f'{base_url}/organizations'
    headers = {'X-Cisco-Meraki-API-Key': api_key, 'Content-Type': 'application/json'}

    response = requests.get(get_url, headers=headers)
    orgs = response.json() if response.ok else response.text
    org_id_list = []
    org_name_list = []
    if response.ok == True:
        for org in orgs:
            org_id_list.append(org['id'])
            org_name_list.append(org['name'])
    else:
        return "Cannot get the response"
    return  *org_id_list
    # (True, [{'id': '111353', 'name': 'VC Corporation', 'url': 'https://n17.meraki.com/o/o39y0b/manage/organization/overview'}])

